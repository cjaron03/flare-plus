# flare+ Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required for Production
# =============================================================================

# API Authentication - comma-separated list of valid API keys for the prediction API
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=your-api-key-here,another-key-if-needed

# UI API Key - used by the dashboard to authenticate with the prediction API
# Should match one of the keys in API_KEYS above
UI_API_KEY=your-api-key-here

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flare_prediction
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =============================================================================
# Optional Configuration
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Sentry error monitoring (get DSN from sentry.io)
# SENTRY_DSN=https://your-dsn@sentry.io/project-id

# NASA API key for DONKI data (get free key at https://api.nasa.gov/)
# NASA_API_KEY=DEMO_KEY

# Admin UI credentials (for dashboard admin features)
ADMIN_UI_LOGIN_ENABLED=true
ADMIN_UI_USERNAME=admin
ADMIN_UI_PASSWORD=change_this_password

# Rate limiting (requests per minute for prediction endpoints)
# RATE_LIMIT_PREDICTIONS=20

# =============================================================================
# Advanced Configuration (usually not needed)
# =============================================================================

# Data ingestion settings
# DATA_CACHE_HOURS=48
# BACKFILL_START_DATE=2023-01-01
# UPDATE_INTERVAL_MINUTES=60

# API ports
# API_HOST_PORT=5001
# UI_HOST_PORT=7860
